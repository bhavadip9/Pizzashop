@model Pizzashop.entity.ViewModels.WaitingUserDetails


<div class="modal fade" id="AddUserWaitingList" tabindex="-1" aria-labelledby="exampleModalLabel">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Waiting Token Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="AddWaitingUserForm" method="post" asp-controller="OrderApp" asp-action="_AddUserInWaitingList">
                <div class="modal-body">
                    <div class="form-floating mb-3">

                        <input asp-for='Email' id="AddUserEmail" type="email" class="form-control hover-effect"
                            id="name" placeholder="Waiting User">
                        <label asp-for='Email'>Email</label>
                        <span asp-validation-for="Email" class="text-danger text-start "
                            style=" font-size:small; font-family:Noto Sans; "></span>

                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for='UserName' id="UserName" type="text" class="form-control hover-effect" id="name"
                            placeholder="User name">
                        <label asp-for='UserName'>Name</label>
                        <span asp-validation-for="UserName" class="text-danger text-start "
                            style=" font-size:small; font-family:Noto Sans; "></span>

                    </div>

                    <div class="form-floating">
                        <input asp-for="Phone" type="number" class="form-control hover-effect" placeholder="" />
                        <label asp-for="Phone">Phone</label>
                        <span asp-validation-for="Phone" class="text-danger text-start "
                            style=" font-size:small; font-family:Noto Sans; "></span>

                    </div>

                    <div class="d-flex mt-2  gap-2 justify-content-between">
                        <div class="form-floating clo-6">
                            <input asp-for="No_of_Person"  class="form-control hover-effect" placeholder="" />
                            <label asp-for="No_of_Person">No. of Person</label>
                            <span asp-validation-for="No_of_Person" class="text-danger text-start "
                                style=" font-size:small; font-family:Noto Sans; "></span>

                        </div>
                        <div class="form-floating " style="width: 200px;">
                            <select class="form-select" aria-label="Floating label select example"
                                id="SectionSectectForUserAdd" asp-for="SectionId">
                            </select>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary" >Save</button>
                </div>
            </form>
        </div>

    </div>
</div>



<script>


    $("#AddUserEmail").on("change", function () {
        var email = $("#AddUserEmail").val();

        $.ajax({
            url: "/OrderApp/CheckEmail",
            method: "GET",
            data: { email: email },
            success: function (data) {
                console.log(data);
                $("#UserName").val(data.userName);
                $("#Phone").val(data.phone);
                $("#No_of_Person").val(data.no_of_Person)

            }
        })
    })
</script>
