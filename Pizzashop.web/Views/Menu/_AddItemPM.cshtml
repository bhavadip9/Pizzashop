                            <button class="delete-group btn  d-block p-0" data-group-id="${modifierId}">
                                <i class="bi bi-trash"></i>
                            </button>
                            <small>max</small>
                            <select class="modifier-qty-add Mximum1 form-select Mximum${modifierId}" id="MinimumValue" data-group-id="${modifierId}">                           
