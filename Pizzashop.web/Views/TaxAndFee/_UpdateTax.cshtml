@model Pizzashop.entity.ViewModels.AddTaxViewModel



<div class="modal fade" id="EditTax" tabindex="-1" aria-labelledby="exampleModalLabel">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Edit Tax</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post" id="EditTaxForm">
                <input type="hidden" asp-for="TaxId" id="TaxIdEdit" />
                <div class="modal-body">
                    <div class="form-floating mb-3">
                        <input asp-for="TaxName" type="text" id="TaxNameEdit" class="form-control hover-effect"
                            placeholder="">
                        <label asp-for="TaxName">Name</label>
                        <span class="text-danger" asp-validation-for="TaxName"></span>
                    </div>
                    <div class="gap-3" style="display: flex; justify-content: space-between; ">
                        <div class="form-floating mb-3 " style="width: 230px;">
                            <select class="form-select" id="TaxTypeEdit" aria-label="Floating label select example"
                                asp-for="TaxType">
                                <option value="true">Percentage</option>
                                <option value="false">Flat Amount</option>
                            </select>
                            <label>Taxs Type*</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="TaxAmount" type="text" id="EditTaxAmount" class="form-control hover-effect"
                                placeholder="">
                            <label asp-for="TaxAmount">Amount</label>
                            <span class="text-danger" asp-validation-for="TaxAmount"></span>
                        </div>
                    </div>
                    <div class="d-flex gap-3">
                        <div class="form-check form-switch">
                            <h6>
                                <input class="form-check-input toggle-switch" id="EditIsEnable" asp-for="IsEnable"
                                    type="checkbox" role="switch">
                                <label class="form-check-label" for="EditIsEnable">IsEnable</label>
                            </h6>

                        </div>
                        <div class="form-check form-switch">
                            <h6>
                                <input class="form-check-input toggle-switch" id="EditIsDefault" asp-for="IsDefault"
                                    type="checkbox" role="switch">
                                <label class="form-check-label" for="EditIsDefault">IsDefault</label>
                            </h6>

                        </div>
                    </div>
                </div>


                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary" id="SaveTaxbtn">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>




